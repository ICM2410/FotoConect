<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/roundstyle2">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/imagenView"
        android:src="@drawable/fotoprueba3"
        app:civ_border_width="1dp" />


    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagenView"
        android:id="@+id/textViewMessage"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="juliana.uribe2002" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imagenView"
        android:layout_below="@id/textViewMessage"
        android:id="@+id/userView"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Hola!, este es un preview del mensaje" />

</RelativeLayout>